@model Management.ViewModel.Staff.CreateStaffInput
@{
    @using (Html.BeginForm("Create", "Staff", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        <div class="form">
            <div class="form-group">
                @Html.LabelFor(m => m.Name)
                @Html.EditorFor(m => m.Name)
                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
            </div>
            <div class="form-group ">
                @Html.LabelFor(m => m.Email)
                @Html.EditorFor(m => m.Email)
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Password)
                @Html.EditorFor(m => m.Password)
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            </div>          

            <div class="form-group ">
                @Html.LabelFor(m => m.RoleId)
                @Html.DropDownList("RoleId", (IEnumerable<SelectListItem>)ViewBag.Roles, "Phan quyen", new { @class = "form -control" })
                @Html.ValidationMessageFor(m => m.RoleId, "", new { @class = "text-danger" })
            </div>
            <div>
                <input type="submit" value="Create" />
                <span class="btn btn-link">@Html.ActionLink("Back to List", "Index") </span>
            </div>
        </div>

    }
}
