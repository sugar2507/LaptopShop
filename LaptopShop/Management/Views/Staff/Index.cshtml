@model IEnumerable<Management.ViewModel.Staff.StaffDTO>
@{
    <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col-6 text-danger text-uppercase">
                    <strong>List product </strong>
                </div>
                <div class="col-6 text-right">
                    <a href="@Url.ActionLink("Create","Staff")" class="btn btn-sm btn-success">Create product</a>
                </div>
            </div>
        </div>
    </div>
    if (Model.Count() > 0)
    {
        <div class="card-block p-3">
            <table class="table table-bordered table-hover table-striped">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Id)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.RoleName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
               
                    

                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.RoleName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                                             
                        <td>                            
                            <a href="@Url.ActionLink("Delete","Staff",new { id = item.Id })" class="btn btn-sm btn-danger">Delete</a>
                            <a href="@Url.ActionLink("Detail","Staff",new { id = item.Id })" class="btn btn-sm btn-info">Detail</a>
                        </td>
                    </tr>
                }
            </table>
        </div>
    }
    else
    {
        <p>No data</p>
    }
}
