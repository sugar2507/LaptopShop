@model IEnumerable<Management.ViewModel.Categories.CategoryDTO>
@{
    <p>Category list</p>
    <a href="@Url.ActionLink("Create","Category")">Tao moi</a>
    if (Model.Count() > 0)
    {
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
            </tr>
        </thead>
        @foreach (var item in Model)
        {
    <tr>
        <th>@item.ID</th>
        <th>@item.Name</th>
        <th><a href="@Url.ActionLink("Edit","Category",new { id = item.ID })">Edit</a></th>
        <th><a href="@Url.ActionLink("Delete","Category",new { id = item.ID })">Delete</a></th>
        <th><a href="@Url.ActionLink("Detail","Category",new { id = item.ID })">Detail</a></th>
    </tr>

        }
    </table>
       
    }
    else
    {
        <p>No data</p>
    }
}



