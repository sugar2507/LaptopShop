@model IEnumerable<Management.ViewModel.Role.RoleDTO>
@{
    <p>Role list</p>
    <a href="@Url.ActionLink("Create","Role")">Create</a>
    if (Model.Count() > 0)
    {

        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                </tr>
            </thead>
            @foreach (var item in Model)
            {
        <tr>
            <th>@item.Id </th>
            <th>@item.Name </th>
            <th><a href="@Url.ActionLink("Edit","Role", new { id = item.Id})">Edit</a></th>
            <th><a href="@Url.ActionLink("Delete","Role", new { id = item.Id})">Delete</a></th>
            <th><a href="@Url.ActionLink("Detail","Role", new { id = item.Id})">Detail</a></th>
        </tr>

            }
        </table>
    }
    else
    {
        <p>No data</p>
    }
}
