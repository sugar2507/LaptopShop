@model IEnumerable<Management.ViewModel.Customer.CustomerDTO>
@{
   
    if (Model.Count() > 0)
    {

        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Email</th>
                </tr>
            </thead>
            @foreach (var item in Model)
            {
        <tr>
            <th>@item.Id </th>
            <th>@item.Name </th>
            <th>@item.Email </th>
            <th>
            <th>
                <a href="@Url.Action("Deactive", "Customer", new { id = @item.Id })" class="btn btn-info btn-sm">Ẩn </a>
            </th>
            @*<th><a href="@Url.ActionLink("Delete","Role", new { id = item.Id})">Delete</a></th>
        <th><a href="@Url.ActionLink("Detail","Role", new { id = item.Id})">Detail</a></th>*@
        </tr>

            }
        </table>
    }
    else
    {
        <p>No data</p>
    }
}
