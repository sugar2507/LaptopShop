@model IEnumerable<Management.ViewModel.Product.ProductDTO>
@{
    if(Model.Count() > 0)
    {
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>CategoryName</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Image</th>
                    <th>Description</th>

                </tr>
            </thead>
            @foreach(var i in Model)
             {
        <tr>
            <th>@i.Id</th>
            <th>@i.Name</th>
            <th>@i.CategoryName</th>
            <th>@i.Price</th>
            <th>@i.Quantity</th>
            <th>@i.Image</th>
            <th>@i.Description</th>
            <th><a href="@Url.ActionLink("Edit","Product",new { id = i.Id })">Edit</a></th>
            <th><a href="@Url.ActionLink("Delete","Product",new { id = i.Id })">Delete</a></th>
            <th><a href="@Url.ActionLink("Detail","Product",new { id = i.Id })">Detail</a></th>
        </tr>
             }
        </table>
    }
    else
    {
        <p>No data</p>
    }
}
